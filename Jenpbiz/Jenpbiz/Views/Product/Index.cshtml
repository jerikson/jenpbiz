@using Jenpbiz.Models
@model List<Jenpbiz.Models.Product>
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
<div class="container">
    <br/>
    <h3>Products: @Model.Count.ToString()</h3>
    <br />
    <br />
    <div class="list-group">
        
        
        @foreach (var p in Model)
        {
            <div class="list-group-item">
                <a href="~/Product/GetProduct/@p.ProductId"><span class="label label-default">@p.ProductId</span> @p.ProductTitle @p.ProductDescription @p.Price.PriceValue @p.Price.PriceCurrency</a>
                <a href="~/Product/DeleteProduct/@p.ProductId"><span class="glyphicon glyphicon-remove-sign pull-right"></span></a>
            </div>



        }
    </div>

</div>
</body>
</html>
